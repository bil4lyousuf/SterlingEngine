<!DOCTYPE html>
<html lang="en">
 <head>
   <title>Sterling Engine</title>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
 </head>


 
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="banner bg-dark text-light d-flex justify-content-between align-items-center p-3">
                    <h1>Sterling Engine</h1>
                      <% if(UserID == 0){ %>
			 <form action="/signuppage" method="GET">
				<button type="submit" class="btn btn-success">Sign Up</button>
		    	</form>
		      <% } %>

		  	<% if(UserID != 0){ %>
   				<form action="/deleteacc" method="GET">
                        		<button type="submit" class="btn btn-success">Delete Account</button>
                    		</form>
			<% } %>

			<% if(UserID != 0){ %>
                                <form action="/changeusernamepage" method="GET">
                                        <button type="submit" class="btn btn-success">Change Username</button>
                                </form>
                        <% } %>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 bg-light p-4">
                <div class="window mb-4">
                    <h2>Sort By</h2>
                    <div class="form-check">
                        <input type="radio" name="sort" id="sort-price-high-low" class="form-check-input" value="price_high_low">
                        <label for="sort-price-high-low" class="form-check-label">Price High-to-Low</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" name="sort" id="sort-price-low-high" class="form-check-input" value="price_low_high">
                        <label for="sort-price-low-high" class="form-check-label">Price Low-to-High</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" name="sort" id="sort-sterling-rating" class="form-check-input" value="sterling_rating">
                        <label for="sort-sterling-rating" class="form-check-label">Sterling Rating</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" name="sort" id="sort-metacritic-rating" class="form-check-input" value="metacritic_rating">
                        <label for="sort-metacritic-rating" class="form-check-label">Metacritic Rating</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" name="sort" id="sort-steam-users" class="form-check-input" value="steam_users">
                        <label for="sort-steam-users" class="form-check-label">Steam Users</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" name="sort" id="sort-sterling-users" class="form-check-input" value="sterling_users">
                        <label for="sort-sterling-users" class="form-check-label">Sterling Users</label>
                    </div>
                </div>
                <div class="window">
                    <h2>Filter</h2>
                    <div class="form-group">
                        <label for="price">Price:</label>
                        <input type="range" id="price" name="price" class="form-control-range" min="0" max="100" value="50">
                    </div>
                    <div class="form-group">
                        <label for="release-date">Release Date:</label>
                        <input type="range" id="release-date" name="release-date" class="form-control-range" min="1990" max="2023" value="2010">
                    </div>
                    <div class="form-group">
                        <label for="genre">Genre:</label>
                        <select id="genre" name="genre" class="form-control">
                            <option value="action">Action</option>
                            <option value="adventure">Adventure</option>
                            <!-- Add more genres here -->
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="category">Category:</label>
                        <select id="category" name="category" class="form-control">
                            <option value="single_player">Single Player</option>
                            <option value="multiplayer">Multiplayer</option>
                            <!-- Add more categories here -->
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-8 p-4">
               
		<form action="search" method="POST">
	           <div class="form-group">
	             <label for="search">Search</label>
	             <input type="text" class="form-control col-lg-9" id="search"  placeholder="Search..." name="search">
	           </div>
	           <button type="submit" class="btn btn-primary">Search</button>
	         </form>

  
	      <table border="1">
	        <tr>
	            <th>Game</th>
	            <th>Price</th>
	            <th>Rating</th>
		    <th># of Sterling Owners</th>
		    <th>Avg Sterling Rating</th>	            
	        </tr>
	        
	        <%
	        if(gamesData.length!=0){
	        var i=1;
	        gamesData.forEach(function(data){
	        %>
	        <tr>
	            
	            <td><%=data.Game %></td>
	            <td><%=data.CurrPrice %></td>
	            <td><%=data.Rating %></td>
		    <td><%=data.NumOwners %></td>
		    <td><%=data.LocalRating %></td>
	       
	        </tr>
	        <%  i++; }) %>
	        <% } else{ %>
	            <tr>
	                <td colspan="7">No Data Found</td>
	            </tr>
	        <% } %>
	    </table>
            </div>
        </div>
    </div>

</body>
</html>
